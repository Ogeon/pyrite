include "../light_sources/d65.pyr" as d65

image = {
	width = 1024
	height = 256
	format = Image.Png
}

renderer = Renderer.Simple {
	pixel_samples = 500
	spectrum.samples = 5
	spectrum.bins = 50
	tile_size = 32
	light_samples = 5
}

camera = Camera.Perspective {
	fov = 53
	transform = Transform.LookAt
	transform.from = Vector(0, 0, 15)
	transform.to = Vector(0, 0, 0)
}

ball = Shape.Sphere {
	radius = 1
	position = Vector(0, 0, 0)
}

light_ball = ball {
	material = Material.Emission(Math.Mul(Color.Spectrum(d65.spectrum), 3))
	position.y = 3
	position.z = 1
}

color_ball = ball {
	material = Material.Diffuse(Color.Rgb(1, 0, 0))
}

world.sky = Sky.Color(0)
world.objects = [
	Shape.Plane {
		origin = Vector { z = 1 }
		normal = Vector { z = 1 }
		material = Material.Diffuse { color = 0.8 }
	},
	light_ball {
		position.x = -6.25
	},
	color_ball {
		material.color = Color.Rgb(1, 0, 0)
		position.x = -6.25
	},
	light_ball {
		position.x = -3.75
	},
	color_ball {
		material.color = Color.Rgb(1, 1, 0)
		position.x = -3.75
	},
	light_ball {
		position.x = -1.25
	},
	color_ball {
		material.color = Color.Rgb(0, 1, 0)
		position.x = -1.25
	},
	light_ball {
		position.x = 1.25
	},
	color_ball {
		material.color = Color.Rgb(0, 1, 1)
		position.x = 1.25
	},
	light_ball {
		position.x = 3.75
	},
	color_ball {
		material.color = Color.Rgb(0, 0, 1)
		position.x = 3.75
	},
	light_ball {
		position.x = 6.25
	},
	color_ball {
		material.color = Color.Rgb(1, 0, 1)
		position.x = 6.25
	}
]
