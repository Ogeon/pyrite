include "../light_sources/d65.pyr" as d65

image = {
	width = 512
	height = 300
	format = Image.Png
}

renderer = Renderer.Simple {
	pixel_samples = 100
	spectrum.samples = 5
	spectrum.bins = 50
	spectrum.span = [400, 700]
	tile_size = 32
	bounces = 256
}

camera = Camera.Perspective {
	fov = 12.5
	transform = Transform.LookAt
	transform.from = Vector(-6.55068, -8.55076, 4.0)
	transform.to = Vector(0.1, 0, 0.1)
	transform.up = Vector { z = 1 }
	focus_distance = 11.08
	aperture = 0.002
}

diamond = Material.Refractive {
	ior = 2.37782
	dispersion = 0.01371
	color = 1
}

plexi = Material.Mirror(Math.Mix(0, 0.2, Math.Fresnel(1.1)))

world.sky = Sky.Color(0)
world.objects = [
	Shape.Mesh {
		file = "diamonds.obj"

		materials.diamonds = diamond
		materials.light_left = Material.Emission(Color.Spectrum(d65.spectrum))
		materials.light_right = Material.Emission(Math.Mul(Color.Spectrum(d65.spectrum), 2))
		materials.bottom = plexi
	}
]
