include "../cameras/canon_40d.pyr" as response_curves

image = {
	width = 512
	height = 300
	format = Image.Png
	rgb_curves = response_curves
}

renderer = Renderer.Simple {
	pixel_samples = 200
	spectrum.samples = 1
	spectrum.bins = 50
	spectrum.span = [400, 700]
	tile_size = 32
	bounces = 6
}

camera = Camera.Perspective {
	fov = 27
	transform = Transform.LookAt
	transform.from = Vector { x = -8, y = -40, z = 8.0 }
	transform.to = Vector { z = 4.7, x = 0 }
	transform.up = Vector { z = 1 }
}

world.sky = Sky.Color { color = 0 }
world.objects = [
	Shape.Mesh {
		file = "dragon.obj"

		materials.dragon = Material.Refractive {
			ior = 2.37782
			dispersion = 0.01371
			color = 1
		}
	}

	Shape.Plane {
		origin = Vector,
		normal = Vector { z = 1 },
		material = Material.Diffuse { color = 1 }
	}

	Shape.Plane {
		origin = Vector { y = -10 },
		normal = Vector { y = -1 },
		material = Material.Diffuse { color = 1 }
	}

	Shape.Sphere {
		position = Vector { x = 100, y = -100, z = 50 }
		radius = 5
		material = Material.Emission { color = 20 }
	}
]